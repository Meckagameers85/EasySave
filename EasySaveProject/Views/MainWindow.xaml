<Window x:Class="EasySaveProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EasySaveProject"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="MainWindow" Height="540" Width="920">
<Grid Margin="10">
    <Grid.RowDefinitions>
        <RowDefinition Height="80"/>
        <RowDefinition Height="40"/>
        <RowDefinition Height="360"/>
    </Grid.RowDefinitions>
    <!-- En-tête -->
        <Grid Grid.Row="0">
            <TextBlock Text="EasySave" FontSize="48" FontWeight="Bold" 
                       HorizontalAlignment="Center" VerticalAlignment="Top"/>
            <Button Name="SettingsCryptoSoftButton" Width="32" Height="32"
                    Content="CS S"
                    HorizontalAlignment="Right" VerticalAlignment="Top"
                    Click="SettingsCrytoSoftButton_Click"
                    Margin="0,10,55,0"></Button>
            <Button Name="SettingsButton" Content="S" Width="32" Height="32"
                    HorizontalAlignment="Right" VerticalAlignment="Top"
                    Click="SettingsButton_Click"
                    Margin="0,10,10,0"></Button>
        </Grid>
        <!-- Boutons globaux -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Left">
            <Button Content="Select All" Margin="10" Padding="10,0" Command="{Binding SelectAllBackupCommand}"/>
            <Button Content="Delete" Margin="10" Padding="10,0" Command="{Binding DeleteSelectedBackupsCommand}"/>
            <Button Content="Execute" Margin="10" Padding="10,0" Command="{Binding ExecuteSelectedBackupsCommand}"/>
        </StackPanel>
        <StackPanel Grid.Row="1" Name="NewButton" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="New" Margin="10" Padding="10,0" Click="NewButton_Click"/>
        </StackPanel>
        <!-- Liste des sauvegardes -->
        <ScrollViewer Grid.Row="2" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Visible" Padding="0 10" Background="#F0F0F0">
            <StackPanel x:Name="BackupList" Margin="0,10">
                <!-- Contenu généré dynamiquement -->
            </StackPanel>
        </ScrollViewer>
    <Button Grid.Row="2" Name="MegaNewButton" Content="+" FontSize="30" Width="50" Height="50"
            HorizontalAlignment="Center" VerticalAlignment="Center"
            Click="NewButton_Click"/>
    </Grid>
</Window>
